@model Project1_403.Models.Review

@{
    ViewBag.Title = "Delete";
}
@{ 

    var datef = "";
    if (Model.ReviewDateFriendly == true)
    {
        datef = "&#10004;";
    }
    else
    {
        datef = "&#120299;";
    }
}
<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="container1">
    <h4>Review</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RestCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Restaurant.RestName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReviewOverallRating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReviewOverallRating)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReviewDateFriendly)
        </dt>

        <dd>
            @Html.Raw((string)@datef)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReviewCleanliness)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReviewCleanliness)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReviewDate)
        </dt>

        <dd>
            @{ var parameter = Model.ReviewDate.ToShortDateString();}
